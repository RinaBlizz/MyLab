<Window x:Class="OperCatch1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperCatch1"
        mc:Ignorable="d"
        Title="Сезон" Height="400" Width="450" Background="Coral" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Введите порядковый номер месяца в году:" Grid.Row="0" Margin="10 50 10 0"/>
        <TextBox x:Name="Month" Grid.Row="1" Margin="10 30 10 30"/>
        <Button Grid.Row="2" Content="Показать" Margin="100 20 100 20" Click="Button_Click"/>
        <Label x:Name="Result" Grid.Row="3" Background="White" Margin="10 20 10 20"/>

    </Grid>
</Window>
