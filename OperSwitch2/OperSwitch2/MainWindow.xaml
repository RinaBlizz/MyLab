<Window x:Class="OperSwitch2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperSwitch2"
        mc:Ignorable="d"
        Title="Копилка" Height="400" Width="500" FontSize="20" Background="OrangeRed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Введите количество монет:" Grid.Row="0"/>
        <TextBox x:Name="Kopeck" Grid.Row="1" Margin="20 20 20 20"/>
        <Button Grid.Row="2" Content="Узнать денежную единицу" Margin="100 20 100 20" Click="Button_Click"/>
        <Label x:Name="Result" Grid.Row="3" Margin="20 20 20 20" Background="White"/>
    </Grid>
</Window>
